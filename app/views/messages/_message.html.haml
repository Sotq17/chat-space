.message{data: {id: message.id}}
  .message__name
    = message.user.name
  .message__date
    = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message__text
    - if message.content.present?
      %p.message__content
        = message.content
    = image_tag message.image.url, class: 'message' if message.image.present?
