.chat-side
  .side-header
    .side-header__box
      = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__menu__edit
          = link_to new_group_path(current_user) do
            = fa_icon 'edit', class: 'icon'
        %li.side-header__box__menu__cog
          = link_to edit_group_path(current_user) do
            = fa_icon 'cog', class: 'icon'
  .groups
    .group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message

